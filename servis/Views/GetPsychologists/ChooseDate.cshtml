@model servis.Models.GetSession

@{
    ViewData["Title"] = "Выбрать дату";
}


<h4>GetSession</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date_Session" class="control-label"></label>
                <input asp-for="Date_Session" class="form-control" />
                <span asp-validation-for="Date_Session" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Format_Session" /> @Html.DisplayNameFor(model => model.Format_Session)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Psychologist_objId" class="control-label"></label>
                <select asp-for="Psychologist_objId" class ="form-control" asp-items="ViewBag.Psychologist_objId"></select>
            </div>
           
        </form>
    </div>
</div>

<div>
     <form asp-action="Confirm">
        <input type="hidden" name="id" value="@ViewBag.Psychologist_id" />
        <input type="submit" value="Выбрать" class="btn btn-success" />
    </form>
     <a asp-action="Index">Отмена</a>| 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
